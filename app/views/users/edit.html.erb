<h1>Update Profile</h1>


    <%= form_tag(user_url(@user), method: 'put') do %>

      <p><%= label_tag :username %><%= text_field_tag :name, @user.name %></p>
      <p><%= label_tag :nickname %><%= text_field_tag :nickname, @user.nickname %></p>
      <p><%= label_tag :email %><%= text_field_tag :email, @user.email %></p>
      <p><%= label_tag :password %><%= password_field_tag :password %></p>
      
      <%= submit_tag "Update" %>

    <% end %>
