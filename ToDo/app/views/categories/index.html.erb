<h1>Categories</h1>

<p><%= link_to 'Add a New Category', new_category_url %></p>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.category %></td>
  
      <td><%= link_to 'Edit', edit_category_url(category) %></td>
      <td><%= link_to 'Delete', category_url(category), method: 'delete', data: { confirm: "Do you really want to delete this category?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

