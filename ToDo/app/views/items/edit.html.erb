<h1>Editing Item</h1>




  <%= form_tag(item_url(@item), method: 'put') do %>
  
    <div class="control-group">
      <label class="control-label"><%= label_tag :task %></label>
        <div class="controls">
          <%= text_field_tag :task, @item.task %>
        </div>
    </div>

    <div class="control-group">
      <label class="control-label"><%= label_tag :duedate %></label>
        <div class="controls">
          <%= text_field_tag :due, @item.due%>
        </div>
    </div>

    <div class="control-group">
      <label class="control-label"><%= label_tag 'Priority level' %></label>
        <div class="controls">
          <%= number_field_tag :priority, @item.priority, :in => 1...6%>
        </div>
    </div>

    <div class="control-group">
      <label class="control-label"><%= label_tag :category_id %></label>
        <div class="controls">
          <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :category) %>
          <%= link_to 'Add a New Category', new_category_url %>
        </div>
    </div>

    <div class="control-group">
      <label class="control-label"><%= label_tag :list_id %></label>
        <div class="controls">
          <%= select_tag :list_id, options_from_collection_for_select(List.all, :id, :title) %>
        </div>
    </div>
    
    <div class="control-group">
      <label class="control-label"><%= label_tag 'Assigned to' %></label>
        <div class="controls">
          <%= select_tag :collaborator_id, options_from_collection_for_select(User.all, :id, :nickname) %>
        </div>
    </div>

    <div class="control-group">
      <label class="control-label"><%= label_tag 'Assigned by' %></label>
        <div class="controls">
          <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :nickname) %>
        </div>
    </div>

    <div class="control-group">
      <label class="control-label"><%= label_tag :done? %></label>
        <div class="controls">
          <%= check_box_tag :status, @item.status %>
        </div>
    </div>

    <div class="controls"><%= submit_tag "Update" %></div>
    
  <% end %>
